.dx-sub-nav
  background-color #000
  width 100%
  margin-bottom 25px
  .dx-container
    clearfix()
    height 40px
    line-height 40px
    .dx-sub-nav-title
      float left
      width 225px
      background-color $color-A1
      color #FFF
      text-align center
      .icon-address
        display inline-block
        background url("./img/icon-address.png") 0 center no-repeat
        width 14px
        height 40px
        margin-right 5px
    .dx-sub-nav-list
      float left
      span
        display inline-block
        padding 0 30px
        color #FFF
        cursor pointer
        &.active
          color $color-A1
