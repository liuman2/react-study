.doc-wrapper
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  background-color #f5f5f5
  overflow hidden
  .doc-slider
    position absolute
    top 0
    left 0
    bottom 40px
    right 0
  .doc-operation
    position absolute
    width 100%
    height 40px
    line-height 40px
    bottom 0
    background #000
    .doc-icon-thumb
      cursor pointer
      background url("./img/icon-thumb.png") 0 center no-repeat
      width 18px
      height 40px
      margin-left 24px
    .doc-pagination
      position absolute
      top 0
      left 50%
      //width 160px
      margin-left -80px
      height 40px
      line-height 40px
      > *
        float left
      .doc-icon-next, .doc-icon-pre
        width 11px
        height 40px
        background-position 0 center
        background-repeat no-repeat
        cursor pointer
      .doc-icon-pre
        background-image url("./img/icon-pre.png")
        margin-right 20px
      .doc-icon-next
        background-image url("./img/icon-next.png")
        margin-left 20px
      .doc-page
        color $color-Z2
        font-size 12px
        input
          background #FFF
          border none
          width 25px
          height 18px
          line-height 18px
          padding 0 5px
          color $color-Z2
          margin-right 5px

// slick
.dx-doc-previewer
  width 100%
  height 100%
  overflow hidden
  box-sizing border-box
  .slick-list, .slick-track, .slick-slide
    height 100%
  .slick-slide
    text-align center
    overflow auto
    opacity 0
    transition .3s
    &.slick-slide-dingtalk
      overflow hidden !important
      img
        max-height 100% !important
    &.slick-active
      opacity 1
    &.fade-out
      opacity .5
    &::-webkit-scrollbar
      width 0
    img
      display inline-block
      max-width 100%
      vertical-align middle
  ul
    margin 0
    padding 0
  .slick-dots
    clearfix()
    background-color #FFF
    height 67px
    text-align left
    bottom 0
    padding 20px
    -webkit-box-shadow: 0 0 8px 2px rgba(0, 0, 0, .3)
    -moz-box-shadow: 0 0 8px 2px rgba(0, 0, 0, .3)
    box-shadow: 0 0 8px 2px rgba(0, 0, 0, .3)
    white-space nowrap
    overflow auto
    &:before
      display none
    li
      width 120px
      height 67px
      line-height 67px
      background-color #FFF
      overflow hidden
      margin 0 20px 0 0
      &.slick-active
        .dx-slick-dots
          .icon-page
            background-color $color-A1
      .dx-slick-dots
        position relative
        .icon-page
          position absolute
          //width 18px
          height 18px
          padding 0 5px
          top 0
          left 0
          text-align center
          line-height 18px
          color #FFF
          background-color #666
        img
          width 120px
          height 67px
