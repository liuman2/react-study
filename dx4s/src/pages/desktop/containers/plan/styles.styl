.staffTask
  height: 100%
  padding-bottom: 300px
  ul
    margin: 0
    padding: 0
    list-style-type: none

  .staff-header
    width: 100%
    height: 40px
    line-height: 40px
    background-color: #202028
    margin-bottom: 20px

  .staff-header-container
    width: 1200px
    margin: auto

  .staff-title
    width: 224px
    background-color: $color-A1
    text-align: center
    color: #fff
    font-size: 14px

  .icon-task
    position: relative
    right: 10px
    width: 18px
    height: 18px
    background: url(./img/icon-location.png) no-repeat
    background-size: cover
    display: inline-block
    vertical-align: sub

  .task-list
    width: 1200px
    margin: auto
    margin-bottom: 40px

  .task-item
    margin-bottom: 10px
    background-color: #fff
    padding: 20px
    position: relative
    &:last-child
      margin-bottom: 10px

  .task-item-img
    display: inline-block
    margin-right: 20px
    width: 224px
    height: 126px
    line-height: 0
    vertical-align: bottom

  .task-item-info
    display: inline-block
    height: 126px

  .task-item-name
    display: -webkit-box
    overflow: hidden
    -webkit-box-orient: vertical
    -webkit-line-clamp: 2
    color: $color-Z1
    font-size: 18px
    height: 18px
    line-height: 18px
    position: relative;
    margin-bottom: 16px
    word-break: break-all
    word-wrap: break-word

  .task-item-finishRate
    color: $color-Z3
    font-size: 14px
    line-height: 14px
    height: 14px
    margin-bottom: 12px

  .task-item-time
    color: $color-Z3
    font-size: 14px

  .task-href
    display: block
    position: relative
    overflow: hidden

  .staff-footer
    width: 1200px
    margin: auto

  .staff-next
    background-color: #b1b1b1
    text-align: center
    color: #fff
    font-size: 14px
    height: 48px
    line-height: 48px
    &.disable
      color: rgba(255, 255, 255, 0.48)

  .staffTask-detail
    padding-top: 24px
    width: 1200px
    margin: auto

  .staffTask-header
    padding: 24px
    margin-bottom: 24px
    background-color: #fff

  .play-img
    display: inline-block
    height: 270px
    width: 480px
    margin-right: 24px
    line-height: 0;
    vertical-align: bottom;

  .play-name
    display: inline-block
    height: 270px
    color: $color-Z1
    font-size: 24px
    line-height: 24px
    width: 631px
    .validtime
      margin-top 20px
      font-size 14px

  .tabs
    height: 50px
    line-height: 50px
    border-bottom: 1px solid $color-L1
    background-color: #fff
    padding-left: 24px

  .tab
    display: inline-block
    font-size: 16px
    color: #666
    margin-right: 40px
    &.active
      height: 50px;
      box-sizing: border-box;
      color: #009aec
      border-bottom: 4px solid #009aec

  .staffTask-item
    padding-top: 20px
    padding-bottom: 20px
    padding-left: 24px
    padding-right: 24px
    border-bottom: 1px solid $color-L1
    background-color: #fff
    position: relative

  .staffTask-item-img
    display: inline-block
    margin-right: 20px
    line-height: 0
    vertical-align: bottom
    width: 320px
    height: 180px

  .staffTask-item-info
    display: inline-block
    height: 180px

  .staffTask-item-name
    display: -webkit-box
    overflow: hidden
    -webkit-box-orient: vertical
    -webkit-line-clamp: 2
    color: $color-Z1
    font-size: 22px
    height: 22px
    line-height: 22px
    position: relative;
    margin-bottom: 24px
    word-break: break-all
    word-wrap: break-word
    width: 795px

  .staffTask-item-count
    color: $color-Z2
    font-size: 14px

  .staffTask-item-lock, .staffTask-item-unlock
    display: inline-block
    width: 17px
    height: 20px
    margin-left: 8px
    vertical-align: top

  .staffTask-item-lock
    background: url(./img/icon_lock.png) no-repeat
    background-size: cover

  .staffTask-item-unlock
    background: url(./img/icon_unlock.png) no-repeat
    background-size: cover

  .staffTask-item-complete
    position: absolute
    top: 60px
    right: 40px
    width: 111px
    height: 88px
    background: url(./img/icon_pass.png) no-repeat
    background-size: cover

  .corner
    position absolute
    top 12px
    left -24px
    width 90px
    text-align center
    font-size 16px
    transform rotate(-45deg)
    color #fff
    &.exam
      background-color #cbac51
    &.survey
      background-color #658ae9
    &.series
      background-color: rgb(130, 198, 80)
    &.solution
      background-color: rgb(130, 198, 80)
    &.course
      background-color: rgb(130, 198, 80)

  .valid-status
    display inline-block
    font-size 14px
    background-repeat no-repeat
    background-position 0 center
    position relative
    margin-top 12px
    &.not-started
      color $color-A1
      &:before
        content ''
        position relative
        display inline-block
        width 16px
        height 14px
        top 2px
        background url(../../../../img/icon-plan-notStart.png) no-repeat
        background-size contain
    &.invalid
      color $color-B4
      &:before
        content ''
        position relative
        display inline-block
        width 16px
        height 14px
        top 2px
        background url(../../../../img/icon-plan-invalid.png) no-repeat
        background-size contain
    &.will-invalid
      color $color-B4
      &:before
        content ''
        position relative
        display inline-block
        width 16px
        height 14px
        top 2px
        background url(../../../../img/icon-plan-willInvalid.png) no-repeat
        background-size contain
    &.not-study
      position absolute
      width 111px
      height 88px
      bottom 24px
      right 24px
      background url(../../../../img/icon_failed.png) no-repeat
      background-size contain
    &.pass
      position absolute
      width 111px
      height 88px
      bottom 24px
      right 24px
      background url(../../../../img/icon_pass.png) no-repeat
      background-size contain
    &.not-pass
      position absolute
      width 111px
      height 88px
      bottom 24px
      right 24px
      background url(../../../../img/icon_not_pass.png) no-repeat
      background-size contain
    &.not-mark
      position absolute
      width 111px
      height 88px
      bottom 24px
      right 24px
      background url(../../../../img/icon_not_mark.png) no-repeat
      background-size contain
  .validtime
    .title
      color $color-Z2
    .time
      color $color-A1
