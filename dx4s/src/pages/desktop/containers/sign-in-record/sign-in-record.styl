.sign-in-record
  padding-top 26px
  padding-bottom 276px
  .sign-in-btn
    margin-top px2rem(78)
    text-align center

.sign-in-record-btn
  position fixed
  bottom 276px
  right 150px
  background url("./img/icon-signin.png") no-repeat
  width 120px
  height 35px
  cursor pointer
  color #FFF
  text-align center
  padding-top 85px

.sign-in-record-success
  position fixed
  background url("./img/icon-signin-success.png") no-repeat
  width 272px
  height 272px
  top 50%
  left 50%
  margin-top -136px
  margin-left -136px
  transform scale(0)
  opacity 0
  &.show
    transform scale(1)
    opacity 1
    transition transform .5s, opacity .5s
  &.hide
    transform scale(0)
    opacity 0
    transition transform .5s, opacity .5s
  .mask
    position absolute
    top 143px
    left 175px
    width 29px
    height 19px
    overflow hidden
    .animation
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      background-color #FFF
      transition left .5s ease-in
      &.animating
        left 29px

