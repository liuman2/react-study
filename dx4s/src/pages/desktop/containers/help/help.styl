.help
  background #fff
  padding-bottom 150px
  .help-question
    position relative
    padding-left 25px
    height 40px
    line-height 40px
    font-weight normal
    border-bottom 1px solid #ececec
    cursor pointer
    .icon-arrow
      position absolute
      right 25px
      top 0
      background url("img/icon-arrow.png") 0 center no-repeat
      width 11px
      height 40px
      transition transform .3s
    &.active
      .icon-arrow
        transform rotate(180deg)
    span
      display block
      height 40px
      background url("./img/icon-help.png") 0 center no-repeat
      padding-left 25px
  .help-answers
    padding 15px 25px
    color $color-Z2
    line-height 24px
    border-bottom 1px solid $color-L1


