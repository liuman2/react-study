.course
  margin-top 24px
  padding-bottom: 278px;
  a
    text-decoration none
  ul
    margin 0
  li
    list-style none
  .banner
    padding 24px
    background-color #fff
    height 270px
    margin-bottom 24px
    position relative
    &-face
      width 480px
      height 100%
    &-info
      position: absolute
      left 504px
      top 24px
      margin-left 24px
      width 648px
      height 270px
      &-head
        overflow hidden
      &-title
        color $color-Z1
        font-size 22px
        float left
        max-width 550px
        max-height 60px
      &-tool
        width 66px
        float right
        overflow hidden
        a
          display inline-block
        .favorite
          margin-right 24px
          &:before
            content ''
            position relative
            display inline-block
            width 21px
            height 21px
            background url(./img/icon_favorite.png) no-repeat
            background-size contain
          &.active
            &:before
              background url(./img/icon_favorite_active.png) no-repeat
              background-size contain
        .range
          position absolute
          &:before
            content ''
            position relative
            display inline-block
            width 21px
            height 21px
            background url(./img/icon_add.png) no-repeat
            background-size contain
          &.active
            &:before
              background url(./img/icon_add_active.png) no-repeat
              background-size contain
        .task
          content ''
          position relative
          display inline-block
          width 21px
          height 21px
          background url(./img/icon_task_n.png) no-repeat
          background-size contain
          &:hover
            background url(./img/icon_task_h.png) no-repeat
            background-size contain
      &-tag
        margin-top 24px
        span
          display inline-block
          padding 5px 12px
          margin 0 10px 10px 0
          border 1px solid $color-L1
          font-size 14px
          color $color-Z2
          white-space nowrap
          overflow hidden
      &-rate
        position relative
      &-lecture
        margin-left 40px
        display inline-block
        // position absolute
        top 1px
        font-size: 16px
        color $color-Z1
        &:before
          content ''
          position relative
          display inline-block
          width 16px
          height 14px
          margin-right 8px
          background url(./img/icon_header.png) no-repeat
          background-size contain
      &-validstatus
        margin-left 40px
        display inline-block
        top 1px
        font-size: 16px
        &.not-start
          color $color-A1
          &:before
            content ''
            position relative
            display inline-block
            width 16px
            height 14px
            margin-right 8px
            top 3px
            background url(../../../../img/icon-plan-notStart.png) no-repeat
            background-size contain
        &.will-invalid
          color $color-B4
          &:before
            content ''
            position relative
            display inline-block
            width 16px
            height 14px
            margin-right 8px
            top 3px
            background url(../../../../img/icon-plan-willInvalid.png) no-repeat
            background-size contain
        &.invalid
          color $color-B4
          &:before
            content ''
            position relative
            display inline-block
            width 16px
            height 14px
            margin-right 8px
            top 3px
            background url(../../../../img/icon-plan-invalid.png) no-repeat
            background-size contain
      &-validtime
        margin-top 20px
        font-size 16px
        .title
          color $color-Z2
        .time
          color $color-A1
      &-operate
        position absolute
        bottom 0
        a
          display inline-block
          height 48px
          line-height 48px
          color #fff
          width 160px
          font-size 20px
          text-align center
        .step
          display inline-block
          height 48px
          line-height 48px
        .arrow
          display inline-block
          width 16px
          height 48px
          margin 0 16px
          background url(./img/icon_next.png) center no-repeat
          background-size contain
        .arrow-active
          display inline-block
          width 16px
          height 48px
          margin 0 16px
          background url(./img/icon_next_active.png) center no-repeat
          background-size contain
        .start
          &:before
            content ''
            position relative
            display inline-block
            width 15px
            height 18px
            margin-right 8px
            top 2px
            background url(./img/icon_start.png) no-repeat
            background-size contain
        .pass
          &:before
            content ''
            position relative
            display inline-block
            width 20px
            height 20px
            margin-right 8px
            top 3px
            background url(./img/icon_s_pass.png) no-repeat
            background-size contain
        .fail
          &:before
            content ''
            position relative
            display inline-block
            width 20px
            height 20px
            margin-right 8px
            top 3px
            background url(./img/icon_s_failed.png) no-repeat
            background-size contain
        .lock
          &:before
            content ''
            position relative
            display inline-block
            width 20px
            height 20px
            margin-right 8px
            top 3px
            background url(./img/icon_lock.png) no-repeat
            background-size contain
        .unlock
          &:before
            content ''
            position relative
            display inline-block
            width 20px
            height 20px
            margin-right 8px
            top 3px
            background url(./img/icon_unlock.png) no-repeat
            background-size contain

        .blue
          background-color $color-A1
          &:active
            background-color #008eda
        .gray
          background-color $color-L2
          cursor default
      &-signet
        position absolute
        top 56px
        right 16px
        &.not-mark
          width 111px
          height 88px
          background url(../../../../img/icon_not_mark.png) no-repeat
          background-size contain
        &.pass
          width 111px
          height 88px
          background url(../../../../img/icon_pass.png) no-repeat
        &.fail
          width 111px
          height 88px
          background url(../../../../img/icon_failed.png) no-repeat
        &.not-pass
          width 111px
          height 88px
          background url(../../../../img/icon_not_pass.png) no-repeat
        &.course-pass
          width 111px
          height 88px
          background url(./img/icon_course_pass.png) no-repeat
        &.course-fail
          width 111px
          height 88px
          background url(./img/icon_course_failed.png) no-repeat

      &-desc
        position absolute
        bottom 0
        left 208px
        width 416px
        height 15px
        p
          margin 0
          display inline-block
    .bottom-20
      bottom 20px
  .tab
    padding-left 0
    margin-bottom 1px
    vertical-align baseline
    background-color #fff
    &-first
      margin-right 24px
    &-second
      margin 0 24px
    li
      display:inline-block
      text-align center
      height 50px
      line-height 50px
      a
        display inline-block
        font-size 18px
        color $color-Z2
        box-sizing border-box
        height 100%
        &.active
          color $color-A1
          border-bottom 4px solid $color-A1
  .description
    padding 24px
    background-color #fff
    font-size 14px
    margin-bottom 24px
    img
      max-width 100%
  .catalog
    padding 24px
    padding-bottom 50px
    background-color #fff
    margin-bottom 24px
    &-title
      font-size 16px
      color $color-Z2
      margin-left 12px
      margin-bottom 17px
      display inline-block
    .chapter
      &-title
        height 40px
        line-height 40px
        padding-left 12px
        background-color $color-L1
      &-list
        padding 0
      .node
        // display-flex(center)
        line-height 40px
        border-bottom 1px solid $color-L1
        font-size 14px
        cursor pointer
        position: relative;
        &:hover
          color $color-A1
        &.play
          &:before
            content ''
            position relative
            display inline-block
            width 15px
            height 15px
            margin-right 8px
            top 3px
            left 24px
            z-index 1
            background url(./img/icon_play.png) no-repeat
            background-size contain
        &.done
          &:before
            content ''
            position relative
            display inline-block
            width 15px
            height 15px
            margin-right 8px
            top 3px
            left 24px
            z-index 1
            background url(./img/icon_done.png) no-repeat
            background-size contain
        &.node-lock
          &:before
            content ''
            position relative
            display inline-block
            width 15px
            height 15px
            margin-right 8px
            top 3px
            left 24px
            z-index 1
            background url(./img/icon_node_lock.png) no-repeat
            background-size contain
        &-title
          // box-flex(1)
          border-left 1px solid #bec0c0
          margin 0 0 0 7px
          padding-left 34px
          position absolute
          left 23px
          top 0
          float left
          line-height 40px
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
          width 80%
        &-type
          width 16px
          height 16px
          margin-right 24px
          position absolute
          right 0
          top 12px
          background-size contain
          &.doc-0
            background url(./img/icon_doc.png) no-repeat
          &.doc-1
            background url(./img/icon_doc_active.png) no-repeat
          &.h5-0
            background url(./img/icon_h5.png) no-repeat
          &.h5-1
            background url(./img/icon_h5_active.png) no-repeat
          &.video-0
            background url(./img/icon_video.png) no-repeat
          &.video-1
            background url(./img/icon_video_active.png) no-repeat
          &.audio-0
            background url(./img/icon_audio.png) no-repeat
          &.audio-1
            background url(./img/icon_audio_active.png) no-repeat
          &.img-0
            background url(./img/icon_img.png) no-repeat
          &.img-1
            background url(./img/icon_img_active.png) no-repeat
          &.practice-0
            background url(./img/icon_practice.png) no-repeat
          &.practice-1
            background url(./img/icon_practice_active.png) no-repeat
          &.survey-0
            background url(./img/icon_survey.png) no-repeat
          &.survey-1
            background url(./img/icon_survey_active.png) no-repeat
          &.live-0
            background url(./img/icon_live.png) no-repeat
          &.live-1
            background url(./img/icon_live_active.png) no-repeat
        &.read
          color $color-A1
  .commont
    padding 24px
    background-color #fff
    &-edit
      width 1150px
      height 210px
      background-color #f5f5f5
      overflow hidden
      // display-flex(flex-start)
    &-rate
      // display-flex(flex-start)
      padding-left 152px
      padding-top 20px
      margin-right 40px
      overflow hidden
      width 208px
      float left
      &-title
        margin-bottom 17px
        margin-right 12px
        max-width 56px
      li
        float left
        .rate-stars
          display block
          margin-bottom 17px
          cursor pointer
          &:last-child{
            margin-bottom 0;
          }
    &-textarea
      padding-top 24px
      width 600px
      float left
      position relative
      a
        display block
        margin-top 10px
        position absolute
        right 0
        height 30px
        width 78px
        line-height 30px
        text-align center
        color #fff
        background-color $color-A1
      textarea
        width 600px
        height 120px
        box-sizing border-box
        padding 12px
        line-height 14px
        background-color #fff
        border 1px solid $color-L2
        resize none
    &-empty
      line-height 36px
      font-size 18px
      color #999
      text-align center
    &-list
      margin-top 7px
    &-item
      padding 24px 0
      border-bottom 1px solid $color-L1
      overflow hidden
      // display-flex(flex-start)
      .avatar
        width 40px
        height 40px
        border-radius 100%
        overflow hidden
        float left
        img
          max-width 100%
          height 100%
      .content
        margin-left 20px
        float left
        // box-flex(1)
        &-title
          // display-flex(flex-start)
          position relative
          width 1090px
        .name-rate
          // box-flex(1)
          font-size 16px
          color $color-Z2
          position relative
        .rate-stars
          margin-left 14px
          top -2px
          position absolute
        .time
          width 136px
          font-size 14px
          color $color-Z3
          position absolute
          right 0
          top 0
        &-detail
          font-size 14px
          margin-top 8px
          p
            margin 0
          .dept
            color $color-Z2
            margin-bottom 12px
          .txt
            color $color-Z1
            max-width 1090px
    .disabled
      -moz-opacity 0.64
      opacity 0.64
      background-color #a0d6ff
      cursor not-allowed
  .item
    padding 20px 24px
    background-color #fff
    height 180px
    margin-bottom 1px
    cursor pointer
    position relative
    // display-flex(center)
    &-face
      width 320px
      height 100%
      position relative
      overflow hidden
      .corner
        position absolute
        top 12px
        left -24px
        width 90px
        text-align center
        font-size 16px
        transform rotate(-45deg)
        color #fff
        &.corner-exam
          background-color #cbac51
        &.corner-survey
          background-color #658ae9
    &-info
      margin-left 24px
      height 180px
      position absolute
      top 20px
      left 344px
      &-title
        color $color-Z1
        font-size 22px
        margin-bottom 24px
      &-desc
        color $color-Z1
        font-size 14px
        margin-bottom 24px
      &-study
        color $color-Z2
        font-size 14px
        margin-bottom 24px
      &-signet
        position absolute
        top 80px
        right 40px
        &.not-mark
          width 111px
          height 88px
          background url(../../../../img/icon_not_mark.png) no-repeat
          background-size contain
        &.pass
          width 111px
          height 88px
          background url(./img/icon_pass.png) no-repeat
        &.fail
          width 111px
          height 88px
          background url(./img/icon_failed.png) no-repeat
        &.course-pass
          width 111px
          height 88px
          background url(./img/icon_course_pass.png) no-repeat
        &.course-fail
          width 111px
          height 88px
          background url(./img/icon_course_failed.png) no-repeat
  .more
    width 100%
    line-height 40px
    text-align center
    color #fff
  .btn-more
    margin 0 auto
    background #b8b8b8
    cursor pointer
