footer-icon(name)
  padding-left px2rem(32)
  background-image url("./static/icon-" + name + ".png")
  background-size px2rem(32)
  background-position-y center
  background-repeat no-repeat
  background-color transparent
  color #fff

.sign-footer
  display flex
  flex-flow column
  position absolute
  bottom 0
  width 100%
  padding 0 px2rem(65)
  height px2rem(240)
  color #fff
  &-hide
    display none
  .division
    display flex
    align-items center
    color #B2DBF5
    .middle
      width px2rem(100)
      text-align center
    .line
      height px2rem(2)
      flex 1
      background-color #B2DBF5
      width 100%
  .menu
    display flex
    align-items center
    justify-content center
    height 100%
    &-item
      flex 1
      text-align center
    .icon-download
      footer-icon("download")
    .icon-join
      footer-icon("join")
