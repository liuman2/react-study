.signInCom
  width 100%
  height 100%
  background url('./static/bg.png') no-repeat
  overflow hidden
  ::placeholder
    color: rgba(255, 255, 255, 0.5)
  .logo
      width px2rem(109)
      height px2rem(122)
      margin px2rem(40) auto
      background url('./static/logo.png') no-repeat
      background-size contain
    .form-control
      position relative
      margin px2rem(50) px2rem(60) !important
      border-bottom: 1px solid #ffffff
    .form-control-border
      border:none !important
    input
      &[type='text']
      &[type='password']
        width 100%
        padding px2rem(10) px2rem(40) px2rem(10) px2rem(80) !important
        background none
        font-size px2rem(30)
        border:none !important
        color #fff !important
        &:placeholder-shown + label
          opacity 0
          transform translateY(0)
        &:focus
          &, & + label
            border-color $brand-primary
    .icon
      position absolute
      top px2rem(10)
      left px2rem(20)
      width px2rem(40)
      height px2rem(55)
    .iconTel
      background:url('./static/icon_2.png') no-repeat
      background-size contain
    .iconPwd
      background:url('./static/icon_1.png') no-repeat
      background-size contain
    .iconCode
      background:url('./static/icon_4.png') no-repeat
      background-size contain
    .iconCom
      background:url('./static/icon_3.png') no-repeat
      background-size contain
    .iconPerson
      background:url('./static/icon_5.png') no-repeat
      background-size contain
    .code
      position absolute
      top px2rem(2)
      right px2rem(10)
      width px2rem(200)
      height px2rem(60)
      background #fff
      img
        width 100%
        height 100%
    button
      display block
      width 100%
      padding-top px2rem(40)
      padding-bottom px2rem(40)
  .remark
    width 100%
    margin px2rem(20) auto
    text-align center
    color #fff


