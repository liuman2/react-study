
#base
  height 100%
  width 100%
  #confirm
    width 100%
    #confirmUl
      width 100%
      margin px2rem(15) auto
      list-style none
      padding 0 0 px2rem(120)
      overflow hidden
      margin-bottom 52px
      li
        width 100%
        height px2rem(290)
        margin px2rem(0) auto px2rem(20)
        list-style none
        background #fff
        overflow hidden
        .messages
          width 90%
          height px2rem(160)
          margin px2rem(20) auto
          .card-img
            width px2rem(240)
            height px2rem(160)
            position relative
            float left
            overflow hidden
            img
              width 100%
              height 100%
            .type-icon
              display inline-block
              width px2rem(144)
              height px2rem(36)
              line-height px2rem(36)
              position absolute
              left px2rem(-42)
              top px2rem(12)
              transform rotate(-45deg)
              font-size px2rem(24)
              text-align center
              background $brand-primary
              color #fff
            .icon-bg-new
              background : #f5864f !important
            .icon-bg-solution
              background: #8ec051 !important;
          .card-text
            width px2rem(420)
            height px2rem(160)
            float right
            a , a:hover
              color #333
            .title
              width 100%
              height px2rem(80)
              overflow hidden
              margin 0
              a
                word-break: break-all;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
                max-height px2rem(160)
                white-space normal
            .type
              width 100%
              margin 0
              color #a0a0a0
            .number
              width 100%
              margin 0
              .price
                display inline-block
                float left
                color #fa3c3c
              .person
                display inline-block
                float right
                color #a0a0a0
        .total
          width 90%
          margin 0 auto
          padding px2rem(20)
          height px2rem(50)
          border-top 1px solid #ccc
          text-align right
          span
            color #fa3c3c
  #footer
    position fixed
    width 100%
    height px2rem(100)
    background #fff
    border-top 1px solid #fff
    bottom 0
    left 0
    p
      padding 0 px2rem(20)
      float left
      i
        color #fa3c3c
        font-style normal
    .submitBtn
      position absolute
      width px2rem(260)
      height px2rem(100)
      background #38acff
      color #fff
      right 0
      top 0
      text-align center
      line-height px2rem(100)


