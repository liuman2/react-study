#box
  #detail
    .message
      width 100%
      height px2rem(100)
      background #fff
      position relative
      p
        padding px2rem(30)
        img
          width px2rem(32)
          margin-right px2rem(10)
      .paying
        position absolute
        right px2rem(30)
        top px2rem(25)
        color #fa3c3c
      .paid
        position absolute
        right px2rem(30)
        top px2rem(25)
        color #fa3c3c
      .way
        position absolute
        right px2rem(30)
        top px2rem(25)
        color #a0a0a0
        img
          width px2rem(36)
          margin-right px2rem(10)
      .reason
        position absolute
        right px2rem(20)
        top px2rem(10)
        .status
          color #a0a0a0
          display block
          text-align right
        .reasons
          color #a0a0a0
          display block
    .content
      width 100%
      padding px2rem(20) 0
      background #fff
      margin-top px2rem(20)
      .base
        padding 0 px2rem(20)
        color #a0a0a0
        margin 0
        height px2rem(40)
      ul
        width 100%
        margin px2rem(15) 0
        list-style none
        padding 0
        li
          list-style none
          padding px2rem(20)
          background #f5f5f5
          margin-bottom px2rem(20)
          overflow hidden
          .card-img
              width px2rem(240)
              height px2rem(152)
              position relative
              float left
              overflow hidden
              img
                width 100%
                height 100%
              .type-icon
                display inline-block
                width px2rem(144)
                height px2rem(36)
                line-height px2rem(36)
                position absolute
                left px2rem(-42)
                top px2rem(12)
                transform rotate(-45deg)
                font-size px2rem(24)
                text-align center
                background $brand-primary
                color #fff
              .icon-bg-new
                background : #f5864f !important
              .icon-bg-solution
                background: #8ec051 !important;
            .card-text
              width px2rem(430)
              height px2rem(160)
              float left
              margin-left px2rem(24)
              a , a:hover
                color #333
              .title
                width 100%
                height px2rem(80)
                overflow hidden
                margin 0
                a
                  word-break: break-all;
                  display: -webkit-box;
                  -webkit-line-clamp: 2;
                  -webkit-box-orient: vertical;
                  overflow: hidden;
                  text-overflow: ellipsis;
                  max-height px2rem(160)
                  white-space normal
              .type
                width 100%
                margin 0
                color #a0a0a0
              .number
                width 100%
                margin 0
                .price
                  display inline-block
                  float left
                .person
                  display inline-block
                  float right
                  color #a0a0a0
            .card-total
              float right
              margin-top px2rem(20)
      .total
        padding px2rem(10) px2rem(20)
        text-align right
        margin 0
  #footer
    position fixed
    width 100%
    height px2rem(100)
    background #fff
    border-top 1px solid #fff
    bottom 0
    left 0
    p
      padding 0 px2rem(20)
      float left
      i
        color #fa3c3c
        font-style normal
    .btn1
      margin-top px2rem(15)
      height px2rem(55)
      color #000
      border 1px solid #000
      text-align center
      float right
      margin-right px2rem(10)
      line-height px2rem(55)
      border-radius 4px
      padding 0 px2rem(15)
      a , a:hover
        color #000
    .btn2
      margin-top px2rem(15)
      height px2rem(55)
      padding 0 px2rem(15)
      color #fa3c3c
      border 1px solid #fa3c3c
      text-align center
      float right
      margin-right px2rem(10)
      line-height px2rem(55)
      border-radius 4px
      a , a:hover
        color #fa3c3c
