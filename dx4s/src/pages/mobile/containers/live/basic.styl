section()
  margin-top px2rem(24)

.live-basic
  margin-bottom px2rem(126)
  // margin-bottom 52px
  img.banner
    display block
    width 100%
    height px2rem(375)
  &-content
    background-color #fff
    padding 0 px2rem(24) px2rem(32) px2rem(24)
    .title
      padding px2rem(24) 0
      font-size px2rem(32)
      color $color-Z1
      &-sub
        border-bottom 1px solid $color-L2
        padding-bottom px2rem(26)
        color $color-Z3
        font-size px2rem(26)
        span
          display inline-block
          margin-right px2rem(32)
    .sell
      section()
      color $color-B4
      .price
        font-size px2rem(32)
        display inline-block
        margin-right px2rem(48)
      .count
        font-size px2rem(26)
        display inline-block
    .start-time
      color $color-Z2
      section()
      .status
        margin-left px2rem(40)
        padding-left px2rem(32)
        background-size px2rem(24)
        background-repeat no-repeat
        background-position-y center
      .about_to_start
        color #85c452
        background-image url("./imgs/icon-coming.png")
      .on_live, .on_live_n
        color #3aaeff
        background-image url("./imgs/icon-going.png")
      .over
        color #a0a0a0
        background-image url("./imgs/icon-end.png")
    .tags
      section()
      .tag
        display inline-block
        padding 0 px2rem(16)
        font-size px2rem(24)
        background-color #e4f4ff
        border-radius px2rem(4)
        margin-right px2rem(16)
        margin-bottom px2rem(16)
        line-height px2rem(48)
    .description
      color $color-Z2
      padding-top px2rem(26)
      font-size px2rem(28)
      padding-bottom 52px
      img
        max-width 100%
  &-tab
    margin 0
    padding-left 0
    border-bottom px2rem(1) solid $color-L2
    vertical-align baseline
    height px2rem(97)
    line-height px2rem(97)
    li
      display:inline-block
      text-align center
      width 50%
      font-size px2rem(34)
      a
        display inline-block
        width 100%
        color $text-color
        &.active
          color $brand-primary
          border-bottom 2px solid $brand-primary
  .period-desc
    height px2rem(96)
    line-height px2rem(96)
    background-color #ecf6fe
    color $color-Z2
    font-size px2rem(26)
    padding-left px2rem(16)
    overflow hidden
  .live-basic-tag
    margin-top px2rem(16)
  .live-basic-lecture
    margin-top 2px
  .sub-title
    font-size px2rem(28)
    color $color-Z1
    padding-top px2rem(24)
  .lecture-info
    display-flex(flex-start)
    margin-top px2rem(24)
    margin-right px2rem(24)
  .avatar
    width px2rem(98)
    height px2rem(98)
    overflow hidden
    border-radius px2rem(98)
    margin-bottom px2rem(28)
    > .default-head
      background url("../../../../img/avatar.png") no-repeat center
      background-size cover
    img
      width px2rem(98)
      height px2rem(98)
  .lecture-detail
    box-flex(1)
    margin-left px2rem(24)
    .lecture-name
      margin-bottom px2rem(16)
      font-size px2rem(28)
      color $color-Z1
    .lecture-signature
      word-break break-all
  .live-period
    padding-top px2rem(32)
    padding-bottom px2rem(32)
    margin-left px2rem(24)
    margin-right px2rem(24)
    border-bottom 1px solid #dcdcdc
    .mb20
      margin-bottom px2rem(20)
    .line
      display-flex(flex-start)
      .line-left
        box-flex(1)
        span
          display inline-block
        .period-num
          border-radius 4px
          border 1px solid $color-Z2
          margin-right px2rem(24)
          width px2rem(88)
          text-align center
          float left
        .period-title
          color $color-Z1
          font-size px2rem(28)
          margin-right px2rem(16)
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
          width px2rem(420)
          float left
        .period-time
          color $color-Z3
          font-size px2rem(24)
          margin-right px2rem(24)
      .line-right
        .live-status
          font-size px2rem(26)
          background-size px2rem(24)
          background-repeat no-repeat
          background-position-y center
          padding-left px2rem(24)
          &.about_to_start
            color $color-B3
            background-image url("./imgs/icon-coming.png")
          &.on_live, .on_live_n
            color $color-A1
            background-image url("./imgs/icon-going.png")
          &.over
            color $color-B2
            background-image url("./imgs/icon-review.png")
          // &.not_start
          //   color #a0a0a0
          //   background-image url("./imgs/icon-end.png")
        .live-teacher
          font-size px2rem(24)
          color $color-Z3

  .summary
    line-height px2rem(44)
    &.unshowall
      white-space normal !important
      max-height px2rem(44*3)
      display -webkit-box
      -webkit-line-clamp 3
      -webkit-box-orient vertical
      overflow hidden
      text-overflow ellipsis
  .unfold
    font-size px2rem(28)
    color $color-Z1
    margin-top px2rem(32)
    text-align center
    &.expand
      &:before
        content ''
        position relative
        top px2rem(4)
        display inline-block
        width px2rem(18)
        height 10px
        margin-right px2rem(8)
        background url(./imgs/icon_expand.png) no-repeat
        background-size contain
    &.collapse
      &:before
        content ''
        position relative
        top px2rem(4)
        display inline-block
        width px2rem(18)
        height 10px
        margin-right px2rem(8)
        background url(./imgs/icon_collapse.png) no-repeat
        background-size contain
.period-list
  padding-bottom 52px
