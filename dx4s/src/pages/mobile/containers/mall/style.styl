.mall-home
  .mall_header
    background-color #fff
    .marker
      width px2rem(750)
      height px2rem(56)
      background-color #E4F4FF
      color #666666
      font-size px2rem(24)
      line-height px2rem(56)
      span
        margin 0 0 0 15px
      .close
        background: url("img/icon_close.png") no-repeat
        background-size px2rem(28) px2rem(28)
        width px2rem(28)
        height px2rem(28)
        position relative
        top px2rem(12)
        margin 0 5px 0 0
    .searchbar
      background-color #fff;
      padding px2rem(24) 0;

      .content
        background-color #ECECEC
        text-align center
        margin 0 px2rem(24)
        border-radius 8px
        line-height px2rem(53.76)
        font-size: px2rem(24)
        color: #BFC4C9
        .search-icon
          background url("../../components/search/img/icon_search.png") no-repeat
          background-size: px2rem(26) px2rem(26)
          background-position-y px2rem(15)
          height px2rem(40)
          width px2rem(34)
          display inline-block
    .nav-btn
      width 100%
      border-top 1px solid $color-L1
      height px2rem(164)
      .ul
        list-style none
        margin px2rem(10) 0 0 0
        padding 0
        display-flex(center)
        width 100%
        height px2rem(164)
        > li
          flex 1
          position relative
          text-align center
          > a
            display inline-block
            width px2rem(140)
            color $color-Z2
            font-size px2rem(20)
            text-align center
            height px2rem(117)
            line-height 1
            background-position center 0
            background-repeat no-repeat
            background-size px2rem(56)
            padding-top px2rem(56)
            &.menu_company
              background-image url("img/icon-company.png")
            &.menu_order
              background-image url("img/icon-order.png")
            &.menu_cart
              background-image url("img/icon-cart.png")
              .badge
                color #fff
                background-color red
                position absolute
                top px2rem(-8px)
                left 50%
                margin-left px2rem(17)
                width px2rem(35)
                height px2rem(35)
                border-radius 50%
                line-height px2rem(35)
                display block
                &.fixed
                  left px2rem(197) !important
            &.menu_elective
              background-image url("img/icon-elective.png")
              display block
            &.menu_must
              background-image url("img/icon-must.png")
              display block

