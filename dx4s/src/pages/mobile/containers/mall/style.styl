.mall-more
  background-color #fff
  .header
    width 100%
    .firstlevel
      line-height: px2rem(96)
      overflow-x scroll
      overflow-y hidden
      white-space nowrap
      border-bottom 1px solid #eeeeee
      height px2rem(96)
      span
        line-height px2rem(96)
        margin 0 0 0 px2rem(32)
        display inline-block
        color: #000;
        font-size: px2rem(28)
      .active
        color #38ACFF
    .secondlevel
      line-height px2rem(60)
      span
        margin px2rem(10) px2rem(0) px2rem(10) px2rem(20)
        display inline-block
        padding 0 px2rem(15)
        color: #000;
        font-size: px2rem(24)
        background-color #F5F5F5
        border-radius px2rem(10)
      .active
        color #fff
        background-color #38ACFF
  .products
    margin px2rem(30) px2rem(30) 0 px2rem(30)
    background-color #fff
    .ul
      -webkit-margin-before: 0em;
      -webkit-margin-after: 0em;
      -webkit-margin-start: 0px;
      -webkit-margin-end: 0px;
      -webkit-padding-start: 0px;
    .li
      list-style none
      clear: both
      margin-top: px2rem(30)
      border-bottom 1px solid #eeeeee
      padding-bottom px2rem(20)
      height px2rem(190)
      position relative
      font-size px2rem(20)
    .img
      width px2rem(241)
      height px2rem(153)
      float left
      border none
      position relative
    .info
      float left
      width px2rem(430)
      margin-left px2rem(15)
      .title
        font-size px2rem(28)
        line-height px2rem(39)
        overflow: hidden
        white-space normal !important
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical
        text-overflow ellipsis
        text-align left
        color: #000
      .lecture
        font-size px2rem(28)
        color: gray
        margin-top: px2rem(5)
      .price
        font-size px2rem(24)
        color #f00
        margin-top: px2rem(5)

      .count
        margin-top: px2rem(5)
        font-size: px2rem(24)
        color: #666
        padding-right px2rem(10)
        .people
          background url("img/icon-people.png") no-repeat center center;
          background-size px2rem(24) px2rem(24)
          width px2rem(24)
          height px2rem(24)
          margin-right px2rem(10)
          padding-top px2rem(24)
          display inline-block

