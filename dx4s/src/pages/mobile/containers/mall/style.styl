  .carousel
    height: px2rem(263)
    overflow: hidden
    img
      height: px2rem(263)
  .stats
    margin-top px2rem(24)
    background-color #fff
    width 100%
    height px2rem(220)
    text-align center
    .yesterday-bg
      background url("img/icon_state_bg.png") no-repeat center center;
      background-size px2rem(252) px2rem(52)
      width 100%
      height px2rem(104)
      padding-top px2rem(34)
      .icon_stats
        background: url("img/icon-stats.png")
        display: inline-block;
        background-size: 14px 14px;
        width: 14px;
        height: 14px;
        margin-right: 5px;

    .stats-item
      display flex
      align-items center
      width 100%
      height px2rem(93)
      list-style none
      -webkit-margin-before: 0;
      -webkit-margin-after: 0;
      -webkit-padding-start: 0;
      > li
        flex 1
        > div
          width 100%
          color #000
          font-size px2rem(24)
          text-align center
          height px2rem(100)
          line-height: 1
          > span
            line-height px2rem(24)
            display inline-block
            padding px2rem(10)
            &.strong
              font-weight: bold
              font-size: px2rem(26)
            &.gray
              color: #666666

  .live-section
    height px2rem(428)
    margin-top px2rem(24)
    background-color #fff
    width 100%
    text-align center
    .section-header
      padding px2rem(10)
      border-bottom 1px solid #f5f5f5
      padding 10px 15px
      .more
        color #38acff
        div
          width px2rem(160)
          height px2rem(32)
          text-align right
    .section-cate
      text-align left
      padding-left 15px
      font-size px2rem(24)
      span
        background #f5f5f5
        padding px2rem(10)
        margin-right: px2rem(30)
        margin-top: px2rem(24)
        display inline-block
    .section-item
      padding: 15px
      float left
      width 50%
      &:nth-child(even)
        padding-left: 5px;
      &:nth-child(odd)
        padding-right: 5px;
      .img
        position relative
        img
          width px2rem(340)
          height: px2rem(183)
          border: none
        span
          color #fff
          transform-origin: center bottom 0px
          transform: rotate(-45deg)
          font-size: px2rem(22)
        a
          display: block;
        .begin
          position absolute
          left 0
          right 0
          bottom 0
          height px2rem(32)
          font-size px2rem(22)
          color #ffffff
          background-color rgba(0, 0, 0, .64)
          text-align left
          line-height px2rem(32)
          padding-left px2rem(14)

      .people
        background url("img/icon-people.png") no-repeat center center;
        background-size px2rem(24) px2rem(24)
        width px2rem(24)
        height px2rem(24)
        margin-right px2rem(10)
        padding-top px2rem(24)
        display inline-block
      .title
        margin-top px2rem(24)
        margin-bottom px2rem(10)
        line-height: px2rem(37.5)
        height: px2rem(37.5)
        overflow: hidden
        white-space normal !important
        display -webkit-box
        -webkit-line-clamp 1
        -webkit-box-orient vertical
        text-overflow ellipsis
        text-align left
        color #000
      .gray
        color: gray
      .price
        color red
