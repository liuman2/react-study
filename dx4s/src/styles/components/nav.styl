body.fixed-navbar-top
  padding-top $navbar-height !important

.navbar
  &.navbar-static-top
    position fixed
    z-index 999
    top 0
    left 0
    right 0
    height $navbar-height
    background-color #f5f5f5
    border-bottom 1px solid #dcdcdc
    line-height $navbar-height
    text-align center
    font-size px2rem(34)
  .inner
    display: flex;
  .nav-back
    font-size: px2rem(44);
    height: $navbar-height;  
    flex-basis: $navbar-height;
    background url("~img/icon_arrow_left.png") no-repeat center
    background-size: 26% 40%;
  .navbar-brand
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    flex: 1;
    display: block;
  .navbar-right
    height: $navbar-height;   
    flex-basis: $navbar-height;
