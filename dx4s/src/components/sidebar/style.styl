.dx-sidebar
  height 100%
  width 50px
  position fixed
  z-index 1
  top 0
  left 0
  overflow hidden
  transition 0.5s
  &-open
    width: 370px
  &-right
    left auto
    right 0

  &-operation
    position absolute
    top 0
    bottom 0
    left 0
    width 50px
    word-break break-all
    text-align center
    span
      user-select none
      background-color #666666
      display block
      border-bottom-left-radius 5px
      border-top-left-radius 5px
      color #ffffff
      margin-top 12px
      padding 12px 21px
      line-height 15px
      cursor pointer
      img
        width 12px
        height 12px
        margin-bottom 10px
    span.disabled
      background-color #898989
      opacity 0.64
  &-content
    background-color #f5f5f5
    position relative
    top 0
    bottom 0
    left 50px
    height 100%
